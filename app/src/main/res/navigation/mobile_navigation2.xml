<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation2"
    app:startDestination="@id/guidebookFragment">

    <fragment
        android:id="@+id/guidebookFragment"
        android:name="com.sergio.guiat.ui.guidebook.GuidebookFragment"
        android:label="Guidebook"
        tools:layout="@layout/fragment_guidebook" >
        <action
            android:id="@+id/action_guidebookFragment_to_detailFragment2"
            app:destination="@id/detailFragment2" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment2"
        android:name="com.sergio.guiat.ui.detail.DetailFragment"
        android:label="Detalles sobre la ruta"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="routes"
            app:argType="com.sergio.guiat.server.RoutesServer" />
        <action
            android:id="@+id/action_detailFragment2_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/addTourFragment"
        android:name="com.sergio.guiat.ui.add_tour.AddTourFragment"
        android:label="AÃ±ade un tour"
        tools:layout="@layout/fragment_add_tour" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.sergio.guiat.ui.profile.ProfileFragment"
        android:label="Mi Perfil"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/chatListFragment"
        android:name="com.sergio.guiat.ui.listChats.ChatListFragment"
        android:label="Chats"
        tools:layout="@layout/fragment_chat_list" >
        <action
            android:id="@+id/action_chatListFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.sergio.guiat.ui.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="chatId"
            app:argType="string" />
        <argument
            android:name="user"
            app:argType="string" />
    </fragment>
</navigation>